<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.tipsManfaat.Workout">

    <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
        android:id="@+id/progressBarWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        app:m_circle_radius="80"
        app:m_cicle_stroke_width="25"
        app:m_arc_stroke_color="@android:color/white"
        app:m_circle_stroke_color="@color/colorPrimary"
        />

    <Button
        android:id="@+id/startWorkout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="START"
        android:background="@drawable/button"
        android:textColor="#FFFDFD"
        android:textSize="25sp"/>
    
    <Button
        android:id="@+id/pauseWorkout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:textColor="#FFFDFD"
        android:text="PAUSE"

        android:textSize="25sp"/>
    <Button
        android:id="@+id/resumeWorkout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:textColor="#FFFDFD"
        android:text="RESUME"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/finishWorkout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:textColor="#FFFDFD"
        android:text="FINISH WORKOUT"
        android:textSize="25sp"/>

    <ProgressBar
        android:id="@+id/progressBarKirimWorkout"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:visibility="invisible"
        android:layout_height="wrap_content" />

</LinearLayout>