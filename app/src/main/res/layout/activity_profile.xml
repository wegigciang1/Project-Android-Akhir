<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9b5120"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.easyhealthy.ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/userProfilePictureId"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="20sp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_notifications_black_24dp" />


            <EditText
                android:id="@+id/profileUserNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Name"
                android:textColor="#fff"
                android:textSize="25sp" />


            <Button
                android:id="@+id/updateProfileInfoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="50sp"
                android:layout_marginRight="40sp"
                android:background="#c4986a"
                android:text="Update Profile"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="25sp" />


            <Button
                android:id="@+id/log_outButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="40sp"
                android:layout_marginBottom="20sp"
                android:background="#c4986a"
                android:text="Log Out"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="25sp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>
